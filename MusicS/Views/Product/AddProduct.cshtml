@model MusicS.Models.Product

@{
    ViewBag.Title = "Добавить товар";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Добавить товар</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body>
<h3 class="text-center mt-3">Добавить товар</h3>
<div class="container profile-data" style="margin: 50px 0">
    <div class="row">
        <div class="col data-holder">
            <form method="post" asp-action="AddItem" asp-controller="Product" asp-antiforgery="true" id="add-item-form">
                <p>Название:</p>
                <input asp-for="Name" type="text" name="name" placeholder="Название" class="form-control" id="name-input"/>
                <div class="form-group">
                    <p class="mt-3">Описание: </p>
                    <textarea asp-for="Description" name="description" class="form-control" id="desc-input" rows="3"></textarea>
                </div>
                <p>Категория:</p>
                <select asp-for="Category" class="form-select" name="Category" aria-label="Default select example">
                    <option>Гитары</option>
                    <option>Клавишные</option>
                    <option>Аксессуары</option>
                </select>
                <p class="pt-3">Цена: </p>
                <input asp-for="Price" name="price" value="1"/>
                <p class="pt-3">Ссылка на фото: </p>
                <input asp-for="ImageUrl" type="text" name="imageurl" placeholder="Ссылка на фото" class="form-control"/>
                <button class="mt-3" type="submit" id="add-item-btn">Добавить</button>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/addAnimeItem.js"></script>
</body>
</html>